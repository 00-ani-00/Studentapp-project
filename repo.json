pipeline {
    agent {
        node {
            label 'label1'
        }

    }
    stages {
        stage('git commit') {
            steps {
              sh '''
              git clone https://github.com/00-ani-00/my-repo-1.git
        
        '''  
            }
        }
        stage('build') {
            steps {
                sh '''
               cd /home/ubuntu/workspace/project/
               mvn clean
               mvn package
                '''
            }
        }
        stage('test') {
            steps {
                echo "successfully test"
            }
        }
        stage('deploy') {
            steps {
              sh '''
              
              sudo wget https://dlcdn.apache.org/tomcat/tomcat-8/v8.5.93/bin/apache-tomcat-8.5.93.zip
              
              cd /home/ubuntu/workspace/project/
              sudo apt install unzip -y
              sudo unzip apache-tomcat-8.5.93.zip
               
              '''
            }
        }
        stage('copy') {
            steps{
           sh ''' sudo cp  /home/ubuntu/workspace/project/target/studentapp-2.2-SNAPSHOT.war /home/ubuntu/workspace/apache-tomcat-8.5.93/webapps/
             '''
            }
        }
        stage('rename') {
            steps{
            sh '''
         sudo mv /home/ubuntu/workspace/project/apache-tomcat-8.5.93/webapps/studentapp-2.2-SNAPSHOT.war /home/ubuntu/workspace/project/apache-tomcat-8.5.93/webapps/studentapp.war
              sudo chmod -R +x /home/ubuntu/workspace/project/apache-tomcat-8.5.93/bin/
              cd /home/ubuntu/workspace/project/apache-tomcat-8.5.93/bin/
              sudo ./startup.sh'''
            }

        }

        
        }
}