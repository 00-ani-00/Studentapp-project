pipeline {
    agent any

    parameters {
        string(name: 'aniket', description: 'male')
    }

    stages {
        stage('Create File and Write Gender') {
            steps {
                script {
                    def fileName = 'gender.txt'
                    def name = params.NAME
                    def gender

                    if (name.toLowerCase() == 'male') {
                        gender = 'male'
                    } else {
                        gender = 'female'
                    }

                    def lines = "Name: ${name}\nGender: ${gender}"

                    writeFile file: fileName, text: lines
                }
            }
        }
    }
}
